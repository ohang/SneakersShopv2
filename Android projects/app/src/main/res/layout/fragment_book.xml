<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/maincolor"
    tools:context=".fragment.BookFragment"
    android:weightSum="1"

    >

    <LinearLayout
        android:id="@+id/ornamentLAyout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:orientation="horizontal"
        android:weightSum="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.008">

        <LinearLayout

            android:id="@+id/notesLayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="25dp"

                android:layout_marginLeft="13dp"
                android:layout_marginBottom="25dp"
                android:elevation="15dp"
                app:cardCornerRadius="8dp">

            <ImageView

                android:id="@+id/fragmentimg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                 />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/imagelayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:backgroundTint="@color/backcolor"
            android:orientation="vertical">




                <TextView
                    android:layout_marginTop="55dp"
                    android:id="@+id/Booknamef_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Martin Iden"
                    android:textAlignment="center"
                    android:textColor="#B5ED931F"
                    android:textSize="22sp" />
<ImageView
    android:src="@drawable/newor"
    android:layout_width="match_parent"
    android:layout_height="30dp"/>
            <TextView
                android:layout_marginTop="50dp"
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="#AA5C5C"
                android:textSize="15sp"
                android:text="Հեղինակ՝" />

            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/textauthorid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:text="author" />


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/descriptonLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:orientation="vertical"
        android:background="@drawable/or1"
        android:backgroundTint="#CDBC4545"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="14dp"
        app:layout_constraintVertical_bias="0.997">

        <TextView
            android:id="@+id/descriptontextid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#FFFF"
            android:textAlignment="center"
            android:text="Ֆրանսահայ հայտնի կինոռեժիսորի ինքնակենսագրական այս գիրքը հուզիչ պատում է ճակատագրի բերումով Ֆրանսիայում ապաստանած հայ ընտանիքի մասին: Անծանոթ աշխարհի անտարբերության ու սառնության օղակում մի բուռ մարդիկ "
            />

        <androidx.cardview.widget.CardView
            android:id="@+id/read_id"
            android:layout_width="200dp"
            android:layout_height="50dp"
            app:cardCornerRadius="0dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            app:cardBackgroundColor="#2AF9A825"
          >

<ImageView
    android:tint="#F9A825"
    android:layout_width="50dp"
    android:src="@drawable/reading"
    android:layout_height="match_parent"/>

            <TextView
                android:layout_marginLeft="54dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Կարդալ"

                android:textStyle="bold"
                android:textColor="#F9A825"
                android:textSize="30sp" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</LinearLayout>